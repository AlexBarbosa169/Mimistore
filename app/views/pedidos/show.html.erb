<p id="notice"><%= notice %></p>

<p>
  <strong>Descricao:</strong>
  <%= @pedido.descricao %>
</p>

<p>
  <strong>Finalizado:</strong>
  <%= @pedido.finalizado %>
</p>

<p>
  <strong>Aprovado:</strong>
  <%= @pedido.aprovado %>
</p>

<p>
  <strong>Client:</strong>
  <%= @pedido.client.nome %>
</p>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Valor</th>      
      <th>Quantidade</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedido.products.each do |produtos| %>
      <tr>
        <td><%= produtos.nome %></td>           
		<td>	  
		  <%= produtos.descricao %>
		</td>
		<td>	  
		  <%= produtos.valor %>
		</td>
		<td>	  
		  <%= produtos.quantidade %>
		</td>
    <td> 
        <a href="/pedidos/<%=@pedido.id%>/remover/<%=produtos.id%>">Remover</a>
    </td>
		</tr>
	    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_pedido_path(@pedido) %> |
<%= link_to 'Back', pedidos_path %>
