<p id="notice"><%= notice %></p>

<h1>Pedidos</h1>

<div>

<table>   
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Finalizado</th>
      <th>Aprovado</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.descricao %></td>
        <td><%= pedido.finalizado %></td>
        <td><%= pedido.aprovado %></td>
        <td><%= pedido.client.id %></td>
        <td><%= link_to 'Show', pedido %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>  

</div>


<br>

